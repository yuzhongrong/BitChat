<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="android.com.bitchat">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <!--android.permission.VIBRATE允许访问震动权限-->
    <uses-permission android:name="android.permission.VIBRATE" />
    <!--android.permission.FLASHLIGHT允许访问闪光灯的权限-->
    <uses-permission android:name="android.permission.FLASHLIGHT" />


    <application
        android:name=".app.BitChatApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher1"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activitys.SplashActivity2"
            android:screenOrientation="portrait"
          >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activitys.RegisterActivity"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".activitys.ResetAccountActivity"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".activitys.LoginActivity"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".activitys.LanguageActivity"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".activitys.IMSessionActivity"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".activitys.BackupsActivity"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".activitys.WebViewActivity"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".activitys.AccountActivity"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".activitys.StartBackupsActivity"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".activitys.VerifyActivity"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".activitys.MainActivity"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".activitys.ScanActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activitys.QRCodeActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activitys.AddFriendActivity"
            android:screenOrientation="portrait" />





        <service
            android:name=".service.BitchatService"
            android:enabled="true"
            android:exported="true"></service>
    </application>

</manifest>